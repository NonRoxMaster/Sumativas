#include<stdio.h>
#include<string.h>
//Miguel Diaz sumativa 6
int main()
{
    printf("**Sumativa 6 Nombre mas corto**\n\nMiguel Diaz\n\n");
    char nombre1[20];
    char nombre2[20];
    char nombre3[20];
    char nombre4[20];
    char nombre5[20];
    int n1,n2,n3,n4,n5;
    int min;

    printf("introduce nombre #1: ");
    scanf("%s",nombre1);
    printf("introduce nombre #2: ");
    scanf("%s",nombre2);
    printf("introduce nombre #3: ");
    scanf("%s",nombre3);
    printf("introduce nombre #4: ");
    scanf("%s",nombre4);
    printf("introduce nombre #5: ");
    scanf("%s",nombre5);

    n1=strlen(nombre1);
    n2=strlen(nombre2);
    n3=strlen(nombre3);
    n4=strlen(nombre4);
    n5=strlen(nombre5);

    min=n1;
    if(n2<min){
    min=n2;
    }else if(n3<min){
    min=n3;
    }else if(n4<min){
    min=n4;
    }else if(n5<min){
    min=n5;
                        }
    if(n1==min){
            printf ("el nombre mas corto es: %s\n", nombre1);
            }
    if(n2==min){
            printf ("el nombre mas corto es: %s\n", nombre2);
            }
    if(n3==min){
            printf ("el nombre mas corto es: %s\n", nombre3);
            }
    if(n4==min){
            printf ("el nombre mas corto es: %s\n", nombre4);
            }
    if(n5==min){
            printf ("el nombre mas corto es: %s\n", nombre5);
            }
return 0;
}
